<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:sas-env="http://www.sas.com/xml/schema/env"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans    
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.sas.com/xml/schema/env
        http://www.sas.com/xml/schema/env/sas-env.xsd">

    <sas-env:serviceURLDAO id="serviceURLDAO" />

    <!--
    Specifies or imports bean definitions associated with the data access layer.
    'Data' may be actual tables, SAS metadata, properties files, etc. 
    -->

    <bean id="configurationComponent"
            class="com.sas.common.components.ConfigurationComponent">
        <property name="configurationService"
            ref="configurationService" />
    </bean>

    <bean id="omrConnectionInfoComponent"
            class="com.sas.common.components.OmrConnectionInfoComponent">
        <property name="repository" value="@{omr_repository}" />
        <property name="authDomain" value="@{metadata.domain}" />
        <property name="adminUserId" value="@{secure.userid}" />
        <property name="adminPassword" value="@{secure.password}" />
        <property name="host" value="@{omr_host}" />
        <property name="port" value="@{omr_port}" />
    </bean>

</beans>
