<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans    
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--
    Cross-site scripting protection.
    -->

    <bean id="multiSanitizer" class="com.sas.framework.commons.util.MultipleSanitizerSupport">
        <property name="sanitizers">
            <list>
                <!-- filter: <anything script anything> 	-->
                <bean class="com.sas.framework.webapp.servlet.sanitizers.DefaultCrossSiteScriptingSanitizer" >
                    <property name="expression">
                        <value><![CDATA[(?i)(<script.*?>)]]></value>
                    </property>
                </bean>

                <!-- filter: <javascript: -->
                <bean class="com.sas.framework.webapp.servlet.sanitizers.DefaultCrossSiteScriptingSanitizer" >
                    <property name="expression">
                        <value><![CDATA[(?i)(javascript:)]]></value>
                    </property>
                </bean>

                <!-- filter: style : expression( MSIE specific deviation from W3C CSS -->
                <bean class="com.sas.framework.webapp.servlet.sanitizers.DefaultCrossSiteScriptingSanitizer" >
                    <property name="expression">
                        <value><![CDATA[(?i)style.*?:\s*e(/\*.*?\*/)*x(/\*.*?\*/)*p(/\*.*?\*/)*r(/\*.*?\*/)*e(/\*.*?\*/)*s(/\*.*?\*/)*s(/\*.*?\*/)*i(/\*.*?\*/)*o(/\*.*?\*/)?n(/\*.*?\*/)*\(]]></value>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="sanitizingRequestFilter" class="com.sas.framework.webapp.servlet.SanitizingRequestFilter">
        <property name="requestSanitizer" ref="multiSanitizer" />
    </bean>

</beans>
